<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/materialCardView"
        android:layout_width="0dp"
        app:cardCornerRadius="5dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="8dp">

            <TextView
                android:id="@+id/txt_vehical_model"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Skoda Laura"
                android:textAppearance="@style/text_regular"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/text_grey"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_vehicle_number" />


            <TextView
                android:id="@+id/txt_vehicle_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vehical"
                android:textAppearance="@style/text_light"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@+id/txt_vehical_model"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/txt_vehical_model" />

            <TextView
                android:id="@+id/txt_vehicle_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="5dp"
                android:text="DL 01 AB 5574"
                android:textAppearance="@style/text_regular"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="@+id/txt_vehical_model"
                app:layout_constraintTop_toBottomOf="@+id/txt_vehical_model" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>